{
  "manifest_version": 2,

  "name": "Mikhail Extension",
  "description": "test extension",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "permissions": [
    "background",
    "storage",
    "activeTab"
  ],
  "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
  ],
  "content_security_policy": "script-src 'self' https://code.jquery.com; object-src 'self'"
}
